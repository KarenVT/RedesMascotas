<resources>
    <!-- Tema base para la app PawConnect -->
    <style name="Theme.PawConnect" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Color primario -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        
        <!-- Color secundario -->
        <item name="colorSecondary">@color/secondary</item>
        
        <!-- Color de acento -->
        <item name="colorAccent">@color/accent</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/white</item>
        
        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Estilos adicionales -->
        <item name="buttonStyle">@style/PawConnect.Button</item>
        <item name="android:buttonStyle">@style/PawConnect.Button</item>
    </style>
    
    <!-- Estilo personalizado para botones -->
    <style name="PawConnect.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PawConnect.Button.outline" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/white</item>
        <item name="strokeColor">@color/primary</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="cornerRadius">22dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
    </style>

    
    <!-- Estilo para el título del Toolbar -->
    <style name="PawConnect.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="Theme.RedesMascotas" parent="Theme.PawConnect">
    </style>
    
    <!-- Estilos específicos para el perfil -->
    <style name="ProfileCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/profile_section_background</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:padding">20dp</item>
        <item name="android:elevation">2dp</item>
    </style>
    
    <style name="ProfileTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    
    <style name="ProfileSectionTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/blue_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
    
    <style name="ProfileFieldLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/warm_beige</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.08</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <style name="ProfileFieldValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:minHeight">28dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <style name="ProfileEmptyState">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/profile_empty_text</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    
    <style name="ProfileEditButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/edit_button_background</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:elevation">3dp</item>
    </style>
</resources>