<resources>
    <!-- Tema base para la app PawConnect -->
    <style name="Theme.PawConnect" parent="Theme.MaterialComponents.DayNight">
        <!-- Color primario -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        
        <!-- Color secundario -->
        <item name="colorSecondary">@color/secondary</item>
        
        <!-- Color de acento -->
        <item name="colorAccent">@color/accent</item>
        
        <!-- Colores de fondo -->
        <item name="android:colorBackground">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Barra de estado -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Colores de texto -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        
        <!-- Estilos adicionales -->
        <item name="buttonStyle">@style/PawConnect.Button</item>
        <item name="android:buttonStyle">@style/PawConnect.Button</item>
    </style>
    
    <!-- Estilo personalizado para botones -->
    <style name="PawConnect.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    <style name="Theme.RedesMascotas" parent="Theme.PawConnect">
    </style>
</resources>