<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Header mejorado con gradiente -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/profile_header_background"
        android:padding="24dp"
        android:gravity="center">

        <!-- Icono de videos -->
        <ImageView
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_video_play"
            android:layout_marginBottom="12dp"
            app:tint="@color/white" />

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos_title"
            android:textSize="28sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="6dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comparte tus mejores momentos en video"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:alpha="0.9" />

    </LinearLayout>

    <!-- Contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Sección Seleccionar Video con Material Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <!-- Título de sección -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_add"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/accent" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Agregar Video"
                            android:textSize="20sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02" />

                    </LinearLayout>

                    <!-- Botón mejorado -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectVideo"
                        style="@style/PawConnect.Button.outline"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/videos_select_button"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"

                        app:cornerRadius="28dp"
                        android:elevation="4dp"
                        app:icon="@drawable/ic_video_camera"
                        app:iconTint="@color/primary_dark"
                        app:iconGravity="textStart"
                        app:iconSize="24dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Reproductor de Video con Material Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/layoutVideoPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- Título del reproductor -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_video_play"
                            android:layout_marginEnd="12dp"
                            app:tint="@color/secondary" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Reproductor de Video"
                            android:textSize="20sp"
                            android:textColor="@color/primary"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.02" />

                    </LinearLayout>

                    <!-- VideoView con controles personalizados -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:background="@color/background"
                        app:cardCornerRadius="12dp">

                        <VideoView
                            android:id="@+id/videoView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center" />

                        <!-- Overlay de carga mejorado -->
                        <LinearLayout
                            android:id="@+id/layoutVideoLoading"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:alpha="0.9"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_marginBottom="16dp"
                                android:indeterminateTint="@color/accent" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/videos_loading"
                                android:textColor="@color/accent"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Controles personalizados -->
                        <com.group.redesmascotas.ui.CustomMediaController
                            android:id="@+id/customMediaController"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:visibility="gone" />

                    </FrameLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sección Mi Galería de Videos -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- Título de la galería -->
                <LinearLayout
                    android:id="@+id/tvUploadedVideosLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_video_play"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/secondary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mi Galería de Videos"
                        android:textSize="20sp"
                        android:textColor="@color/primary"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.02" />

                </LinearLayout>

                <!-- Lista de Videos -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewVideos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:nestedScrollingEnabled="false"
                    android:clipToPadding="false"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="outsideInset" />

                <!-- Estado vacío aesthetic con Material Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/layoutNoVideos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/card_background"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="40dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:src="@drawable/ic_video_camera"
                            android:layout_marginBottom="20dp"
                            android:tint="@color/warm_beige"
                            android:alpha="0.7"
                            android:contentDescription="@string/videos_no_videos" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/videos_no_videos"
                            android:textSize="18sp"
                            android:textColor="@color/warm_beige"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Toca el botón de arriba para agregar tu primer video y comenzar a crear recuerdos increíbles."
                            android:textSize="16sp"
                            android:textColor="@color/warm_beige"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:lineSpacingExtra="4dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>