<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/fragment_menu.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Cada botón representa una opción del menú -->
    <Button android:id="@+id/btn_profile" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Perfil" />
    <Button android:id="@+id/btn_photos" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Fotos" />
    <Button android:id="@+id/btn_video" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Video" />
    <Button android:id="@+id/btn_web" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Web" />
</LinearLayout>