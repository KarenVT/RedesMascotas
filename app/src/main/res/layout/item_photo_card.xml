<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/surface"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Contenedor de imagen con overlay -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="135dp">

            <!-- Imagen de la foto -->
            <ImageView
                android:id="@+id/photoImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/background"
                android:contentDescription="@string/photos_title" />

            <!-- Overlay con degradado para los botones -->
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="top"
                android:background="@drawable/gradient_overlay" />

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="8dp"
                android:orientation="horizontal">

                <!-- Botón favorito -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFavorite"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    app:icon="@drawable/ic_favorite_border"
                    app:iconTint="@color/white"
                    app:iconSize="20dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:rippleColor="@color/white" />

                <!-- Botón editar -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEdit"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:insetLeft="0dp"
                    android:insetRight="0dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/white"
                    app:iconSize="18dp"
                    app:iconPadding="0dp"
                    app:iconGravity="textStart"
                    app:cornerRadius="20dp"
                    app:backgroundTint="@android:color/transparent"
                    android:backgroundTint="@android:color/transparent"
                    app:rippleColor="@color/white" />

            </LinearLayout>

        </FrameLayout>

        <!-- Información de la foto -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/photoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photo_description_paseando"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <!-- Tags de categoría -->
            <LinearLayout
                android:id="@+id/categoryTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                >


                <com.google.android.material.chip.Chip
                    android:id="@+id/chipWithFriends"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:textAlignment="center"
                    android:text="@string/filter_with_friends"
                    android:textSize="10sp"
                    app:chipStrokeWidth="1dp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="20dp"
                    app:chipStrokeColor="@color/primary_dark"
                    style="@style/PawConnect.Button.outline" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>

