<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TÃ­tulo del perfil -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_title"
            android:textSize="28sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Mensaje de estado vacÃ­o -->
        <TextView
            android:id="@+id/emptyStateMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/profile_empty_state"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- SecciÃ³n de InformaciÃ³n -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_info_section"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/editInfoButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_button_background"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/profile_edit_button"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <!-- Imagen de perfil con botÃ³n de cÃ¡mara -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:background="@drawable/profile_picture_background"
                    android:src="@drawable/ic_paw_logo"
                    android:scaleType="centerCrop" />

                <ImageButton
                    android:id="@+id/changeProfileImageButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/camera_button_background"
                    android:src="@drawable/ic_camera"
                    android:contentDescription="@string/profile_change_image"
                    android:scaleType="centerInside" />

            </FrameLayout>

            <!-- InformaciÃ³n de la mascota -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_name_label"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                     <TextView
                        android:id="@+id/petName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_pet_name_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:minHeight="24dp"
                        android:gravity="center_vertical" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_paw_logo"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_breed_label"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                     <TextView
                        android:id="@+id/petBreed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_pet_breed_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:minHeight="24dp"
                        android:gravity="center_vertical" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸŽ‚"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_age_label"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                     <TextView
                        android:id="@+id/petAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_pet_age_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:minHeight="24dp"
                        android:gravity="center_vertical" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- SecciÃ³n del DueÃ±o -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_section_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_owner_section"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/editOwnerButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_button_background"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/profile_edit_button"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_name_label"
                        android:textSize="12sp"
                        android:textColor="@color/text_secondary" />

                     <TextView
                        android:id="@+id/ownerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_owner_name_placeholder"
                        android:textSize="16sp"
                        android:textColor="@color/text_secondary"
                        android:textStyle="normal"
                        android:minHeight="24dp"
                        android:gravity="center_vertical" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <!-- SecciÃ³n de Intereses -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_section_background"
            android:padding="16dp">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_interests_section"
                    android:textSize="18sp"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/editInterestsButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_button_background"
                    android:src="@drawable/ic_edit"
                    android:contentDescription="@string/profile_edit_button"
                    android:scaleType="centerInside" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="âš½"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                 <TextView
                    android:id="@+id/petInterests"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/profile_interests_placeholder"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/category_tag_background"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:minHeight="32dp"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>