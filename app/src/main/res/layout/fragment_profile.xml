<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
     android:background="@color/white">

     <!-- Header mejorado con gradiente -->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="@drawable/profile_header_background"
         android:padding="24dp"
         android:gravity="center">

         <!-- Icono del perfil -->
         <ImageView
             android:layout_width="56dp"
             android:layout_height="56dp"
             android:src="@drawable/ic_profile"
             android:layout_marginBottom="12dp"
             app:tint="@color/white" />

         <!-- TÃ­tulo principal -->
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/profile_title"
             android:textSize="28sp"
             android:textColor="@color/white"
             android:textStyle="bold"
             android:fontFamily="sans-serif-medium"
             android:layout_marginBottom="6dp" />

         <!-- SubtÃ­tulo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
             android:text="Perfil de tu mascota"
             android:textSize="16sp"
             android:textColor="@color/white"
             android:alpha="0.9" />

     </LinearLayout>

     <!-- Contenido desplazable -->
     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:fillViewport="true">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:padding="20dp">

         <!-- Mensaje de estado vacÃ­o aesthetic -->
         <com.google.android.material.card.MaterialCardView
             android:id="@+id/emptyStateContainer"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="28dp"
             app:cardCornerRadius="16dp"
             app:cardElevation="4dp"
             app:cardBackgroundColor="@color/card_background"
             app:cardUseCompatPadding="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:padding="32dp"
                 android:gravity="center">

             <ImageView
                 android:layout_width="64dp"
                 android:layout_height="64dp"
                 android:src="@drawable/logo"
                 android:layout_marginBottom="16dp"
                 app:tint="@color/warm_beige"
                 android:alpha="0.7" />

             <TextView
                 android:id="@+id/emptyStateMessage"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="@string/profile_empty_state"
                 android:textSize="16sp"
                 android:textColor="@color/warm_beige"
                 android:fontFamily="sans-serif"
                 android:gravity="center"
                 android:lineSpacingExtra="4dp" />

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- SecciÃ³n de InformaciÃ³n -->
         <com.google.android.material.card.MaterialCardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="28dp"
             app:cardCornerRadius="16dp"
             app:cardElevation="4dp"
             app:cardBackgroundColor="@color/white"
             app:cardUseCompatPadding="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:padding="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp"
                >

                <TextView
                    style="@style/ProfileSectionTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_weight="1"
                    android:text="@string/profile_info_section"
                    android:layout_margin="4dp"
                    />

                <ImageButton
                    android:id="@+id/editInfoButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/edit_button_background"
                    android:src="@drawable/ic_edit"
                    android:scaleType="centerInside"
                    android:elevation="4dp"
                    android:contentDescription="@string/profile_edit_button"
                    android:layout_margin="4dp"
                    />

            </LinearLayout>

             <!-- Imagen de perfil hero con botÃ³n de cÃ¡mara -->
             <FrameLayout
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_horizontal"
                 android:layout_marginBottom="32dp">

                 <ImageView
                     android:id="@+id/profileImage"
                     android:layout_width="150dp"
                     android:layout_height="150dp"
                     android:background="@drawable/profile_image_hero_background"
                     android:src="@drawable/logo_perfil"
                     android:scaleType="centerCrop"
                     android:layout_margin="6dp"
                     android:clipToOutline="true"
                     android:outlineProvider="background"
                     android:padding="8dp" />

                 <ImageButton
                     android:id="@+id/changeProfileImageButton"
                     android:layout_width="48dp"
                     android:layout_height="48dp"
                     android:layout_gravity="bottom|end"
                     android:layout_marginBottom="14dp"
                     android:layout_marginEnd="14dp"
                      android:background="@drawable/camera_button_background"
                     android:src="@drawable/ic_camera"
                     android:contentDescription="@string/profile_change_image"
                     android:scaleType="centerInside"
                     android:elevation="8dp"
                     app:tint="@color/white" />

             </FrameLayout>

            <!-- InformaciÃ³n de la mascota -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/background"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                     <TextView
                         style="@style/ProfileFieldLabel"
                         android:text="@string/profile_name_label" />

                     <TextView
                         android:id="@+id/petName"
                         style="@style/ProfileFieldValue"
                         android:text="@string/profile_pet_name_placeholder"
                         android:textColor="@color/profile_empty_text" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/logo_perfil"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                     <TextView
                         style="@style/ProfileFieldLabel"
                         android:text="@string/profile_breed_label" />

                     <TextView
                         android:id="@+id/petBreed"
                         style="@style/ProfileFieldValue"
                         android:text="@string/profile_pet_breed_placeholder"
                         android:textColor="@color/profile_empty_text" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="ðŸŽ‚"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                     <TextView
                         style="@style/ProfileFieldLabel"
                         android:text="@string/profile_age_label" />

                     <TextView
                         android:id="@+id/petAge"
                         style="@style/ProfileFieldValue"
                         android:text="@string/profile_pet_age_placeholder"
                         android:textColor="@color/profile_empty_text" />

                </LinearLayout>
            </LinearLayout>

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- SecciÃ³n del DueÃ±o -->
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="28dp"
                 app:cardCornerRadius="16dp"
                 app:cardElevation="4dp"
                 app:cardBackgroundColor="@color/white"
                 app:cardUseCompatPadding="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:padding="28dp">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     style="@style/ProfileSectionTitle"
                     android:text="@string/profile_owner_section"
                     android:layout_marginBottom="0dp"
                     android:layout_margin="4dp"/>

                 <ImageButton
                     android:id="@+id/editOwnerButton"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:background="@drawable/edit_button_background"
                     android:src="@drawable/ic_edit"
                     android:scaleType="centerInside"
                     android:elevation="4dp"
                     android:contentDescription="@string/profile_edit_button"
                     android:layout_margin="4dp"

                      />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_profile"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"
                    app:tint="@color/background" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                     <TextView
                         style="@style/ProfileFieldLabel"
                         android:text="@string/profile_name_label" />

                     <TextView
                         android:id="@+id/ownerName"
                         style="@style/ProfileFieldValue"
                         android:text="@string/profile_owner_name_placeholder"
                         android:textColor="@color/profile_empty_text" />

                </LinearLayout>
            </LinearLayout>

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         <!-- SecciÃ³n de Intereses -->
             <com.google.android.material.card.MaterialCardView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:padding="28dp"
                 app:cardCornerRadius="16dp"
                 app:cardElevation="4dp"
                 app:cardBackgroundColor="@color/white"
                 app:cardUseCompatPadding="true">

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:padding="24dp">

             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     style="@style/ProfileSectionTitle"
                     android:text="@string/profile_interests_section"
                     android:layout_marginBottom="0dp"
                     android:layout_margin="4dp"/>

                 <ImageButton
                     android:id="@+id/editInterestsButton"
                     android:layout_width="32dp"
                     android:layout_height="32dp"
                     android:background="@drawable/edit_button_background"
                     android:src="@drawable/ic_edit"
                     android:scaleType="centerInside"
                     android:elevation="4dp"
                     android:contentDescription="@string/profile_edit_button"
                     android:layout_margin="4dp"
                     />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="âš½"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical" />

                 <!-- Container para mÃºltiples intereses -->
                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="1"
                     android:orientation="vertical">

                     <!-- ChipGroup para mÃºltiples intereses -->
                     <com.google.android.material.chip.ChipGroup
                         android:id="@+id/interestsChipGroup"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         app:chipSpacingHorizontal="8dp"
                         app:chipSpacingVertical="4dp"
                         app:singleLine="false"
                         android:visibility="gone" />

                     <!-- Placeholder cuando no hay intereses -->
                     <TextView
                         android:id="@+id/petInterests"
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:text="@string/profile_interests_placeholder"
                         android:textColor="@color/text_primary"
                         android:background="@drawable/bookmark_item_background"
                         android:padding="16dp"
                         android:textAlignment="center"
                         android:minHeight="44dp"
                         android:gravity="center"
                         android:textSize="14sp"
                         android:fontFamily="sans-serif" />

                 </LinearLayout>

            </LinearLayout>

             </LinearLayout>

         </com.google.android.material.card.MaterialCardView>

         </LinearLayout>

     </ScrollView>

</LinearLayout>