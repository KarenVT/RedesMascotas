<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título Principal -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/interactions_title"
            android:textSize="28sp"
            android:textColor="#1F2937"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Sección de Botones de Interacción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_section_background"
            android:padding="20dp"
            android:layout_marginBottom="16dp">

            <!-- Fila superior de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Botón Seguir Mascota -->
                <LinearLayout
                    android:id="@+id/btn_follow_pet"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_button_background"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_follow"
                        android:layout_marginBottom="4dp"
                        android:tint="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/follow_pet_button"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Botón Me Gusta -->
                <LinearLayout
                    android:id="@+id/btn_like"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_button_background"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/iv_like_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_favorite_border"
                        android:layout_marginBottom="4dp"
                        android:tint="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/like_button"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>

            <!-- Fila inferior de botones -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Botón Comentar -->
                <LinearLayout
                    android:id="@+id/btn_comment"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_button_background"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_comment"
                        android:layout_marginBottom="4dp"
                        android:tint="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/comment_button"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>

                <!-- Botón Compartir -->
                <LinearLayout
                    android:id="@+id/btn_share"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/category_button_background"
                    android:layout_marginStart="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_share"
                        android:layout_marginBottom="4dp"
                        android:tint="#6B7280" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share_button"
                        android:textSize="12sp"
                        android:textColor="#374151"
                        android:textAlignment="center"
                        android:gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Sección de Actividad de Interacciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/profile_section_background"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/interactions_activity_title"
                android:textSize="18sp"
                android:textColor="#1F2937"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_interaction_subtitle"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="16dp" />

            <!-- Área de información de interacciones -->
            <TextView
                android:id="@+id/tv_interaction_status"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/url_display_background"
                android:padding="12dp"
                android:gravity="center"
                android:text="@string/select_interaction_subtitle"
                android:textSize="14sp"
                android:textColor="#6B7280"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
