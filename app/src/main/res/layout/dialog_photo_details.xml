<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Campo de texto para el nombre -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxStrokeColor="@color/accent"
        app:hintTextColor="@color/accent"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPhotoName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/photo_name_hint"
            android:inputType="textCapSentences"
            android:maxLines="2"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- SecciÃ³n de opciones -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Opciones"
        android:textColor="@color/text_primary"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:fontFamily="sans-serif-medium" />

    <!-- CheckBox Con Amigos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_follow"
            app:tint="@color/secondary"
            android:layout_marginEnd="12dp" />

        <CheckBox
            android:id="@+id/checkBoxWithFriends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/photo_with_friends_option"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:buttonTint="@color/secondary" />

    </LinearLayout>

    <!-- CheckBox Favorito -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_favorite"
            app:tint="@color/red_like"
            android:layout_marginEnd="12dp" />

        <CheckBox
            android:id="@+id/checkBoxFavorite"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/photo_is_favorite_option"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            app:buttonTint="@color/red_like" />

    </LinearLayout>

</LinearLayout>

