<?xml version="1.0" encoding="utf-8"?>
<!-- Background moderno para la imagen de perfil -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra exterior -->
    <item android:left="2dp" android:top="2dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="@color/modern_shadow" />
        </shape>
    </item>
    
    <!-- Anillo exterior -->
    <item android:left="0dp" android:top="0dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <solid android:color="@color/blue_primary" />
        </shape>
    </item>
    
    <!-- Fondo interior -->
    <item android:left="3dp" android:top="3dp" android:right="7dp" android:bottom="7dp">
        <shape android:shape="oval">
            <solid android:color="@color/pure_white" />
        </shape>
    </item>
    
</layer-list>
