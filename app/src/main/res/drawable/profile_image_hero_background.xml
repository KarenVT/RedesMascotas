<?xml version="1.0" encoding="utf-8"?>
<!-- Background minimalista y aesthetic para la imagen de perfil -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra suave mÃ¡s amplia -->
    <item android:left="6dp" android:top="6dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#12000000" />
        </shape>
    </item>
    
    <!-- Anillo exterior muy sutil -->
    <item android:left="0dp" android:top="0dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="oval">
            <gradient
                android:angle="135"
                android:startColor="@color/surface_elevation_2"
                android:endColor="@color/divider_color"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Anillo medio con gradiente -->
    <item android:left="4dp" android:top="4dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/blue_light"
                android:endColor="@color/blue_primary"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Fondo interior con gradiente muy sutil -->
    <item android:left="8dp" android:top="8dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="oval">
            <gradient
                android:angle="180"
                android:startColor="@color/pure_white"
                android:centerColor="@color/surface_elevation_1"
                android:endColor="@color/pure_white"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>
