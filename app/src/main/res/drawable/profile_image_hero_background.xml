<?xml version="1.0" encoding="utf-8"?>
<!-- Background optimizado para la imagen de perfil - Permite que la imagen ocupe más espacio -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Sombra suave -->
    <item android:left="3dp" android:top="3dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="oval">
            <solid android:color="#15000000" />
        </shape>
    </item>
    
    <!-- Anillo exterior principal -->
    <item android:left="0dp" android:top="0dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/blue_light"
                android:endColor="@color/card_background"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Área interior para la imagen - Márgenes mínimos -->
    <item android:left="3dp" android:top="3dp" android:right="9dp" android:bottom="9dp">
        <shape android:shape="oval">
            <solid android:color="@color/pure_white" />
        </shape>
    </item>
    
</layer-list>
